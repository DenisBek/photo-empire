extends ../main_layout.jade
include _mixins
block header
	header.header__cover
		.header__author-panel
			.author__photo-container
				.author__photo-frame
					img.author__photo(src="#{avatar}", alt="")
			.author__information-container
				h1.author__name #{name}
				p.author__about #{description}
				+social('socials', [['soc_vk', 'https://vk.com', 'Вконтакте'], ['soc_fb', 'https://facebook.com', 'Facebook'], ['soc_twitter', 'https://twitter.com', 'twitter'], ['social_google', 'https://google.com', 'G+'], ['soc_email', '#', 'Mail']])
			.author__controls
				ul.control__list
					li.control__item
						a.control__link_edit.control__link(href="#")
							span Редактировать
							svg.svg__icon_controls
								use(xmlns:xlink="http://www.w3.org/1999/xlink", xlink:href= "/sprites/svg/symbol/bg-sprite.svg#icon-edit")
					li.control__item
						a.control__link_logout.control__link(href="#")
							span Выйти
							svg.svg__icon_controls
								use(xmlns:xlink="http://www.w3.org/1999/xlink", xlink:href= "/sprites/svg/symbol/bg-sprite.svg#icon-off")
					li.control__item.control__item_delete
						a.control__link.control__link_delete(href="#")
							span Удалить аккаунт
							svg.svg__icon_controls
								use(xmlns:xlink="http://www.w3.org/1999/xlink", xlink:href= "/sprites/svg/symbol/bg-sprite.svg#icon-close")
		.header__search-panel
			form.form__search(action="")
				input.search__form(type="search" id="search_form" name="search" placeholder="Исследовать мир" )
				label.label__search(for="search_form")
					svg.svg__icon_search
						use(xmlns:xlink="http://www.w3.org/1999/xlink", xlink:href= "/sprites/svg/symbol/bg-sprite.svg#icon-search")

	









block footer
	.footer__wrapper
		.footer__left
			p.text__left-side Перед вами сервис, который поможет вам организовать свои фотографии в альбомы и поделиться ими со всем миром!
		.footer__center
			a.link__up-arrow(href="#")
				svg.svg__icon_footer
					use(xmlns:xlink="http://www.w3.org/1999/xlink", xlink:href= "/sprites/svg/symbol/bg-sprite.svg#icon-top")
		.footer__right
			p.text__right-side 2016 | Создано командой профессионалов на продвинутом курсепо веб-разработке от LoftSchool